{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "declaration": true,
  },
  "include": ["src/**/*", "tests/**/*"]
}